<div class="container">
  <form id="searchForm" class="input-group mb-3">
    <input id="searchInput" type="text" class="form-control" placeholder="Type to search..." autocomplete="off">
    <button type="submit" class="btn btn-primary">Search</button>
    <button id="clearForm" class="btn btn-danger">Clear</button>
  </form>

  <div class="mb-3">
    <div id="recommend" class="d-flex justify-content-center flex-wrap"> </div>

    <div class="btn-group mb-3 w-100" role="group" aria-label="Basic checkbox toggle button group">
      <input id="hideSelectedToggle" type="checkbox" class="btn-check" autocomplete="off">
      <label class="btn btn-outline-primary text-nowrap flex0" for="hideSelectedToggle">
        <input id="hideSelectedToggleInternal" class="form-check-input cursor-pointer" type="checkbox"
          autocomplete="off">
        <label class="form-check-label cursor-pointer" for="hideSelectedToggleInternal">
          Hide selected
        </label>
      </label>
      <button id="searchByRec" class="btn btn-primary align-self-center flex-fill" type="button">
        Search by recommend
      </button>
    </div>

    <div class="d-flex flex-wrap justify-content-center">
      <div id="spinner" class="spinner-border text-success mb-3" role="status" style="display:none;"> </div>
      <div id="result" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-0 w-100 shadow-sm"> </div>
    </div>
  </div>