<div class="container">
  <form id="searchForm" class="input-group mb-3">
    <input id="searchInput" type="text" class="form-control" placeholder="Type to search...">
    <button type="submit" class="btn btn-primary">Search</button>
    <button id="clearForm" class="btn btn-danger">Clear</button>
  </form>

  <div class="mb-3">
    <div id="recommend" class="d-flex justify-content-center flex-wrap"> </div>
    <button id="searchByRec" class="btn btn-primary w-100">Search by recommend</button>
  </div>

  <div class="d-flex flex-wrap justify-content-center">
    <div id="spinner" class="spinner-border text-success mb-3" role="status" style="display:none;"> </div>
    <div id="result" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-0 w-100 shadow-sm"> </div>
  </div>
</div>